<?xml version="1.0"?>
<layout>
    <!-- Layout for the item dialog. Designed for a resolution of 1024x768 pixels -->
    <!-- We expect the item dialog to have a size of 500x400 pixels. -->
    <!-- All measures are relative to the item dialog's left upper edge -->
    <!-- Furthermore, assume 56 pixels item and 54 pixels army size -->

    <!-- Note: This is the standard and fallback design if for some reason the -->
    <!-- layout for a given resolution does not exist -->

    <!-- Second note: If you adjust this file to another resolution, copy the -->
    <!-- comments as well! Many objects are assumed to have fixed id's or names! -->


    <head>
    </head>
    <body>

        <!-- Left upper side is an icon of the hero with his four slots -->
        <label pos="30,115,100,20" text="weapon" align="right" name="lweapon" id="5"></label>
        <button pos="74,139,56,56" border="0,0,0" toggle="0" title="" name="weapon" id="0"></button>

        <label pos="224,115,100,20" text="shield" align="left" name="lshield" id="6"></label>
        <button pos="224,139,56,56" border="0,0,0" toggle="0" title="" name="shield" id="1"></button>

        <label pos="126,30,100,20" text="armor" align="center" name="larmor" id="7"></label>
        <button pos="148,55,56,56" border="0,0,0" toggle="0" title="" name="armor" id="2"></button>

        <label pos="250,30,100,20" text="misc" align="center" name="lmisc" id="8"></label>
        <button pos="272,55,56,56" border="0,0,0" toggle="0" title="" name="misc" id="3"></button>

        <button pos="150,140,54,54" border="0,0,0" toggle="0" title="" name="army" id="4"></button>


        <!-- Right lower side: OK button -->
        <button pos="430,340,60,30" text="OK" name="b_ok" id="9"></button>


        <!-- Bottom: The items on the ground -->
        <label pos="125,270,100,20" text="ground" align="center" name="lground" id="10"></label>
        <button pos="30,260,40,40" text="-" toggle="0" name="groundprev" id="11"></button>
        <button pos="280,260,40,40" text="+" toggle="0" name="groundnext" id="12"></button>

        <!-- Stuff that is lying on the ground has the fixed id 100 upwards -->
        <button pos="25,320,56,56" border="0,0,0" toggle="1" title="" name="ground0" id="100"></button>
        <button pos="90,320,56,56" border="0,0,0" toggle="1" title="" name="ground1" id="101"></button>
        <button pos="155,320,56,56" border="0,0,0" toggle="1" title="" name="ground2" id="102"></button>
        <button pos="220,320,56,56" border="0,0,0" toggle="1" title="" name="ground3" id="103"></button>
        <button pos="285,320,56,56" border="0,0,0" toggle="1" title="" name="ground4" id="104"></button>


        <!-- Right side: Stuff in the backpack -->
        <label pos="405,40,100,20" text="backpack" align="center" name="lback" id="20"></label>
        <button pos="440,70,40,40" text="-" toggle="0" name="backprev" id="21"></button>
        <button pos="440,250,40,40" text="+" toggle="0" name="backnext" id="22"></button>

        <!-- Stuff in the backpack has the button id 200 upwards -->
        <button pos="360,60,56,56" border="0,0,0" toggle="1" title="" name="back0" id="200"></button>
        <button pos="360,125,56,56" border="0,0,0" toggle="1" title="" name="back1" id="201"></button>
        <button pos="360,190,56,56" border="0,0,0" toggle="1" title="" name="back2" id="202"></button>
        <button pos="360,255,56,56" border="0,0,0" toggle="1" title="" name="back3" id="203"></button>

    </body>
</layout>
